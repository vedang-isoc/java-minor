<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>UserController</servlet-name>
		<display-name>UserController</display-name>
		<description></description>
		<servlet-class>com.cybage.controller.UserController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserController</servlet-name>
		<url-pattern>/UserController/*</url-pattern>
	</servlet-mapping>

	<!-- authentication setting -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>CybageLearning</web-resource-name>
			<url-pattern>/user/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description>Let only user use this app</description>
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>CybageLearning</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description>Let only admin use this app</description>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	
</web-app>



 

